@using System.Globalization
@{
    ViewData["Title"] = "Chat";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Chat</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/chat.css" type="text/css"/>
</head>
<body>
<div class="d-flex justify-content-center h-100">
    <div class="col-8 col-md-9 col-xl-6">
        <!--  HEADER  -->
        <div class="position-relative mt-3">
            <a class="position-absolute top-0 start-0 h-100 w-auto"
               asp-area="" asp-controller="Account" asp-action="Logout">
                <svg class="bi bi-box-arrow-left h-100 w-auto"
                     fill="currentColor"
                     height="16"
                     viewBox="0 0 16 16"
                     width="16"
                     xmlns="http://www.w3.org/2000/svg">
                    <path d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0v2z"
                          fill-rule="evenodd"/>
                    <path d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z"
                          fill-rule="evenodd"/>
                </svg>
            </a>
            <h3 class="text-center">
                Chat
            </h3>
        </div>
        <!--  CHAT  -->
        <div class="bg-light rounded-3 p-2 chat-wrapper">
            <!-- MESSAGES -->
            <div class="messages d-flex flex-column align-content-start gap-2"
                 id="messages">
                <!-- MESSAGE -->
            </div>
            <!-- INPUT -->
            <form class="input-group"
                  id="new-msg-form">
                <input class="form-control"
                       id="message-text"
                       placeholder="Input your message..."
                       required/>
                <div class="input-group-prepend">
                    <button class="btn-primary input-group-text">Send</button>
                </div>
            </form>
        </div>
    </div>
    <div class="cols-4 col-md-3 col-xl-3">
        <!--  HEADER  -->
        <div class="mt-3">
            <h3 class="text-center">
                Users
            </h3>
        </div>
        <div class="d-flex flex-column align-content-stretch"
             id="users">
            <div class="form-check">
                @*<label class="form-check-label">
                    <input
                        class="form-check-input"
                        type="radio"
                        name="active-username"
                        checked/>
                    All users
                </label>*@
            </div>
        </div>
    </div>
</div>
@{
    var username = User.Identity?.Name;
}
<input type="hidden" id="username" value=@username>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
<script src="~/js/chat.js"></script>
</body>
</html>